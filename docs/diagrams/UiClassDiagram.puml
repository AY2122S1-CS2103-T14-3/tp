@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Interface Ui <<Interface>>
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class ResultDisplay
Class PersonListPanel
Class PersonCard
Class StatusBarFooter
Class CommandBox

Class TemplateListPanel
Class TemplateCard

Class MailListPanel
Class MailCard
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
MainWindow *-down->  "1" CommandBox
MainWindow *-down-> "1" ResultDisplay
MainWindow *-down-> "1" StatusBarFooter
MainWindow --> "0..1" HelpWindow
MainWindow *-down-> "1" PersonListPanel
MainWindow *-down-> "1" TemplateListPanel
MainWindow *-down-> "1" MailListPanel

PersonListPanel -down-> "*" PersonCard
TemplateListPanel -down-> "*" TemplateCard
MailListPanel -down-> "*" MailCard

MainWindow -left-|> UiPart

ResultDisplay --|> UiPart
CommandBox --|> UiPart
PersonListPanel --|> UiPart
PersonCard --|> UiPart
TemplateListPanel --|> UiPart
TemplateCard --|> UiPart
MailListPanel --|> UiPart
MailCard --|> UiPart
StatusBarFooter --|> UiPart
HelpWindow --|> UiPart

PersonCard ..> Model
TemplateCard ..> Model
MailCard ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic

StatusBarFooter -[hidden]right- ResultDisplay
ResultDisplay -[hidden]right- CommandBox
CommandBox -[hidden]right- HelpWindow
HelpWindow -[hidden]right- PersonListPanel
PersonListPanel -[hidden]right- TemplateListPanel
TemplateListPanel -[hidden]right- MailListPanel

PersonCard -[hidden]right- TemplateCard
TemplateCard -[hidden]right- MailCard
MainWindow -[hidden]-|> UiPart
@enduml
