@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyAddressBook <<Interface>>
Interface ReadOnlyUserPrefs <<Interface>>
Interface Model <<Interface>>
Class AddressBook
Class ReadOnlyAddressBook
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs


Class UniquePersonList
Class Person
Class Address
Class Email
Class Name
Class Phone
Class Tag

Class UniqueTemplateList
Class Template
Class Subject
Class Body

Class UniqueMailList
Class Mail

Class Job

Class UniqueProductList
Class Product
Class ProductName
Class Type
Class Manufacturer
Class Description
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniquePersonList
UniquePersonList --> "~* all" Person
Person *--> Name
Person *--> Phone
Person *--> Email
Person *--> Address
Person *--> "*" Tag

AddressBook *--> "1" UniqueTemplateList
UniqueTemplateList --> "~* all" Template
Template *--> "1" Subject
Template *--> "1" Body

AddressBook *--> "1" UniqueMailList
UniqueMailList --> "1" Mail
Mail *-right-> "1" Template
Mail *-left-> "1" Job

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email
Subject -[hidden]right-> Body
ModelManager -[hidden]down-> UniquePersonList

ModelManager -->"~* filtered" Person
ModelManager -->"~* filtered" Template
ModelManager -->"~* filtered" Mail

UniqueProductList -[hidden]left- UniquePersonList
ProductName -[hidden]down- Type
Manufacturer -[hidden]down- Description
AddressBook *--> "1" UniqueProductList
UniqueProductList --> "~* all" Product
Product *--> "1" ProductName
Product *--> "1" Type
Product *--> "1" Description
Product *--> "1" Manufacturer
@enduml
