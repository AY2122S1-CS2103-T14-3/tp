<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
 <VBox alignment="CENTER_LEFT" minHeight="105" minWidth="-Infinity" prefHeight="200.0" prefWidth="300.0">
   <padding>
     <Insets bottom="5" left="15" right="5" top="5" />
   </padding>
   <HBox alignment="CENTER_LEFT" spacing="5">
     <Label fx:id="id" styleClass="cell_big_label">
       <minWidth>
         <!-- Ensures that the label text is never truncated -->
         <Region fx:constant="USE_PREF_SIZE" />
       </minWidth>
     </Label>
     <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
   </HBox>
   <FlowPane fx:id="tags" />
      <FlowPane fx:id="insurances" layoutX="25.0" layoutY="68.0" />
   <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
   <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
   <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
   <Label fx:id="revenue" styleClass="cell_small_label" text="\$revenue" />
   <Label fx:id="meeting" styleClass="cell_small_label" text="\$meeting" />
   <Label fx:id="note" styleClass="cell_small_label" text="\$note" />
   <VBox fx:id="claims" />
 </VBox>
</HBox>
